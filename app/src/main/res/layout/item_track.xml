<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Track Title -->
    <TextView
        android:id="@+id/trackTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Track Title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/thumbsUpImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Thumbs Up Button -->
    <ImageView
        android:id="@+id/thumbsUpImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_thumbs_up"
        app:layout_constraintEnd_toStartOf="@+id/thumbsDownImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Thumbs Down Button -->
    <ImageView
        android:id="@+id/thumbsDownImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_thumbs_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
